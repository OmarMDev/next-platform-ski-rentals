        },
        "ghost": {
          "bg": "transparent",
          "text": "colors.text.primary",
          "decoration": "underline"
        }
      },
      "cards": {
        "property_card": {
          "radius": "shapes.border_radius.lg",
          "layout": "Image dominant with floating price tag pill.",
          "text_alignment": "Left aligned below image or overlay on bottom-left."
        },
        "feature_card": {
          "radius": "shapes.border_radius.xl",
          "overlay": "Gradient or solid color overlay with white text."
        }
      },
      "inputs": {
        "search_bar": {
          "shape": "pill",
          "bg": "colors.background.primary",
          "border": "1px solid colors.ui_elements.border_light",
          "shadow": "shadows.float",
          "content": "Text input on left, circular icon button on right."
        }
      },
      "navigation": {
        "style": "Minimalist top bar",
        "logo": "Iconographic logo on left",
        "links": "Centered, uppercase, small sans-serif",
        "cta": "Pill button on right"
      }
