          },
          "heading_h3": {
            "weight": "600",
            "size": "1.5rem"
          },
          "body_regular": {
            "weight": "400",
            "size": "1rem",
            "line_height": "1.6",
            "color": "text.secondary"
          },
          "nav_link": {
            "weight": "500",
            "size": "0.75rem",
            "case": "Uppercase",
            "letter_spacing": "0.05em",
            "color": "text.tertiary"
