      },
      "typography": {
        "font_family_primary": "San Francisco, Inter, or DM Sans (Clean Geometric Sans-serif)",
        "scale": {
          "display_h1": {
            "weight": "800",
            "size": "3.5rem",
            "line_height": "1.1",
