    "vibe": ["Minimalist", "Aspirational", "Airy", "Modern", "Editorial"],
    "design_tokens": {
      "colors": {
        "background": {
          "primary": "#FFFFFF",
          "secondary": "#F8F8F8",
          "card_accent_teal": "#7C9C95",
          "card_accent_sage": "#A4B4A8"
        },
        "text": {
          "primary": "#000000",
          "secondary": "#6B6B6B",
          "tertiary": "#888888",
          "inverted": "#FFFFFF"
        },
        "action": {
          "primary_bg": "#1A1A1A",
          "primary_text": "#FFFFFF",
          "secondary_bg": "#F2F2F2"
